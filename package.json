{
  "name": "devcommandhub",
  "displayName": "devcommandhub",
  "description": "DevCommandHub is a Visual Studio Code extension that acts as a chat-style DevOps assistant.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [],
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "devcommandhub.openWindow",
        "title": "DevCommandHub: Open Window"
      },
      {
        "command": "devcommandhub.setApiBase",
        "title": "DevCommandHub: Set API Base URL"
      }
    ],
    "configuration": {
      "title": "DevCommandHub",
      "properties": {
        "devcommandhub.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "Base URL for DevCommandHub API"
        },
        "devcommandhub.enableNLU": {
          "type": "boolean",
          "default": true,
          "description": "Use Hugging Face NLU when available (falls back to regex if disabled or no API key present)."
        },
        "devcommandhub.confidenceThreshold": {
          "type": "number",
          "default": 0.6,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum entailment score (0â€“1) required to accept an NLU-predicted action."
        }
      }
    },
    "keybindings": [
      {
        "command": "devcommandhub.openWindow",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      },
      {
        "command": "devcommandhub.setApiBase",
        "key": "ctrl+shift+alt+a",
        "mac": "cmd+shift+alt+a"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf out",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.1",
    "@types/vscode": "1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "@types/node-fetch": "^2.6.11",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "node-fetch": "^2.7.0",
    "zod": "^4.0.17"
  }
}
